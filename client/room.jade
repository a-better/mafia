html
	head
		meta(name='viewport' content="initial-scale=1, maximum-scale=1 user-scalable=no")
		meta(charset='utf-8')
	link(href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet")
	link(href="/src/css/chat.css" rel="stylesheet")
	script(src="/lib/jquery-3.1.1.min.js")
	script(src="/lib/bootstrap/js/bootstrap.min.js")
	script(src="https://cdn.socket.io/socket.io-1.3.2.js")
	script(src="//developers.kakao.com/sdk/js/kakao.min.js")
	script(src="/lib/pixi/stat.min.js")
	script(src="/lib/pixi/pixi.js")
	script(src="/lib/pixi/pixi-lights.js")
	script(src="/lib/pixi/pixicam.min.js")
	body
		div(class="container buttonDiv")
			input(type='hidden' id= 'nickname' value= nickname)
			input(type='hidden' id='thumbnail' value= thumbnail)
			input(type='hidden' id='roomId' value= roomId)
			input(type='hidden' id='url' value= url)
			input(type='hidden' id='platformServerId' value= platformServerId)
			input(type='button' class="btn btn-primary" id='startButton' value= 'start')
			input(type='button' class="btn btn-primary skillButton" id='saveButton' value= 'save' data-id='save' data-toggle="modal" data-target="#selectorModal")
			input(type='button' class="btn btn-primary skillButton" id='killButton' value= 'kill' data-id='kill' data-toggle="modal" data-target="#selectorModal")
			input(type='button' class="btn btn-primary skillButton" id='detectButton' value= 'detect' data-id='detect' data-toggle="modal" data-target="#selectorModal")
			input(type='button' class="btn btn-primary skillButton" id='voteButton' value= 'vote' data-id='vote' data-toggle="modal" data-target="#selectorModal")
			input(type='button' class="btn btn-primary" id='agreeButton' value= 'agree')
			input(type='button' class="btn btn-primary" id='disagreeButton' value= 'disagree')
		div(class="container chattingDiv" id='chattingBox')
		div(class="input-group messageDiv")
			input(type="text" id='messageBox' class='form-control messageBox')
			span(class="input-group-btn")
				button(id='messageButton' class="btn btn-default messageButton" type="button") send
		div(id="selectorModal" class="modal fade" role="dialog")
			div(class="modal-dialog")
				div(class="modal-content")
					div(class="modal-header")
						h4(class="modal-title") 대상 선택
					div(class="modal-body")
						div(id='selector')
						input(type='button' class="btn" id='selectButton' value= 'select')							
	script(src="/dist/main.bundle.js")